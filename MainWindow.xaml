<Window x:Class="Tarea_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tarea_3"
        mc:Ignorable="d"
        Title="Sistema de estudiante" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu>
                <MenuItem Header="Registros">
                    <MenuItem Header="Estudiantes" x:Name="rEstudiante" Click="Click_MenuRegistroEstudiantes"/>
                    <MenuItem Header="Carreras" x:Name="rCarreras" Click="Click_MenuRegistroCarreras"/>
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem Header="Estudiantes" x:Name="cEstudiante" Click="Click_MenuConsultaEstudiantes" />
                    <MenuItem Header= "Carreras" x:Name="cCarreras" Click="Click_MenuConsultaCarreras" />
                </MenuItem>

            </Menu>
        </StackPanel>

    </Grid>
</Window>
